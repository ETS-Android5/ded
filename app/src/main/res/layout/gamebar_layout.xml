<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/gamebar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center"
    >


    <ImageView
        android:id="@+id/go_home_gamebar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/gamebar_home"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"

        />


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        android:background="@drawable/round_bckg2"
        android:layout_weight="1"

        >

        <ImageView
            android:id="@+id/current_round"
            android:layout_width="@dimen/gamebar_round_width"
            android:layout_height="@dimen/gamebar_round_height"
            android:src="@drawable/round"
            />

        <TextView
            android:id="@+id/current_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="@dimen/gamebar_text_size"
            android:fontFamily="@font/pencilgrid"
            android:textColor="@color/black"

            />

    </LinearLayout>





    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:background="@drawable/record_bckg2"
        android:layout_weight="1"


        >

        <ImageView
            android:id="@+id/high_score_view"
            android:layout_width="@dimen/gamebar_record_width"
            android:layout_height="@dimen/gamebar_record_height"
            android:src="@drawable/record"
            android:layout_marginEnd="3dp"
            />

        <TextView
            android:id="@+id/high_score_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="@dimen/gamebar_text_size"
            android:fontFamily="@font/pencilgrid"
            android:textColor="@color/black"
            />

    </LinearLayout>







</LinearLayout>