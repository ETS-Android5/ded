<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/gamebar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center"
    >


    <ImageView
        android:id="@+id/go_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/gamebar_home"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="20dp"

        />


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@drawable/round_bckg"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/current_round"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:src="@drawable/round"
            />

        <TextView
            android:id="@+id/current_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="123"
            android:textSize="20sp"
            android:fontFamily="@font/pencilgrid"
            android:textColor="@color/black"

            />

    </LinearLayout>





    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@drawable/record_bckg"
        android:layout_weight="1"


        >

        <ImageView
            android:id="@+id/high_score_view"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:src="@drawable/record"
            />

        <TextView
            android:id="@+id/high_score_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="123"
            android:textSize="20sp"
            android:fontFamily="@font/pencilgrid"
            android:textColor="@color/black"
            />

    </LinearLayout>







</LinearLayout>